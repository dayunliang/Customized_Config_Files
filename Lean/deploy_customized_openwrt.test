        printf " [%c] æ­£åœ¨æ¸…ç©ºç›®å½•..." "$spinstr"
        local spinstr=$temp${spinstr%"$temp"}
        sleep $delay
        printf "\r%-40s\r" " "   # æ¸…ç©ºæ•´è¡Œé¿å…æ®‹ç•™
    done
}

