    __hit "${rel} (site=${COMPILE_NAME})"
  elif [ -f "${def_src}" ]; then
    echo "[DEPLOY] ${def_src} -> ${dst}"
    safe_cp "${def_src}" "${dst}"
    chmod "${mode}" "${dst}" || true
    __hit "${rel} (default)"
  else
    echo "[SKIP_OK] ${rel} (no site/default needed)"
    __skip "${rel}"
  fi
  return 0
}

